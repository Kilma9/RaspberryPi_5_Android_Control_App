<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.minecraft.MinecraftFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_minecraft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Connection Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Server Connection"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Server IP"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_server_ip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="10.0.0.122" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="RCON Port"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_rcon_port"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="25575" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="RCON Password"
                    android:layout_marginBottom="16dp"
                    app:endIconMode="password_toggle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_rcon_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_connect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connect to Server"
                    app:icon="@drawable/ic_server" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Player Management Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player Management"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Player Name"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_player_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_set_creative"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Creative"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_set_survival"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Survival"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Give Items"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Items"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_item_diamond_sword"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:icon="@drawable/mc_diamond_sword"
                        app:iconTint="@null"
                        android:text=""
                        app:iconSize="36dp"
                        app:iconPadding="0dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_item_iron_pickaxe"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:icon="@drawable/mc_iron_pickaxe"
                        app:iconTint="@null"
                        android:text=""
                        app:iconSize="36dp"
                        app:iconPadding="0dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_item_golden_apple"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:icon="@drawable/mc_golden_apple"
                        app:iconTint="@null"
                        android:text=""
                        app:iconSize="36dp"
                        app:iconPadding="0dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_item_ender_pearl"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        app:icon="@drawable/mc_ender_pearl"
                        app:iconTint="@null"
                        android:text=""
                        app:iconSize="36dp"
                        app:iconPadding="0dp"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_item_diamond"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:icon="@drawable/mc_diamond"
                        app:iconTint="@null"
                        android:text=""
                        app:iconSize="36dp"
                        app:iconPadding="0dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_item_emerald"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:icon="@drawable/mc_emerald"
                        app:iconTint="@null"
                        android:text=""
                        app:iconSize="36dp"
                        app:iconPadding="0dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_item_tnt"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:icon="@drawable/mc_tnt"
                        app:iconTint="@null"
                        android:text=""
                        app:iconSize="36dp"
                        app:iconPadding="0dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_item_elytra"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        app:icon="@drawable/mc_elytra"
                        app:iconTint="@null"
                        android:text=""
                        app:iconSize="36dp"
                        app:iconPadding="0dp"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_item_enchanted_book"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:icon="@drawable/mc_enchanted_book"
                        app:iconTint="@null"
                        android:text=""
                        app:iconSize="36dp"
                        app:iconPadding="0dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_item_totem"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:icon="@drawable/mc_totem_of_undying"
                        app:iconTint="@null"
                        android:text=""
                        app:iconSize="36dp"
                        app:iconPadding="0dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_item_iron_ingot"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:icon="@drawable/mc_iron_ingot"
                        app:iconTint="@null"
                        android:text=""
                        app:iconSize="36dp"
                        app:iconPadding="0dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_item_obsidian"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        app:icon="@drawable/mc_obsidian"
                        app:iconTint="@null"
                        android:text=""
                        app:iconSize="36dp"
                        app:iconPadding="0dp"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom Item"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Item Name (e.g. diamond_sword)"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_item_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Quantity"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_item_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_give_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Give Item to Player" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Command Output"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Not connected\nEnter server details and RCON password to begin."
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="monospace"
                    android:textSize="12sp"
                    android:minHeight="100dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>

